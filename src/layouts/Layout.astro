---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import GlobalStyle from "../components/GlobalStyles.astro";

interface Props {
  title?: string;
}

const { title = "Jai Scudder - Plumbing and Property Maintenance" } =
  Astro.props;
---

<!doctype html>
<html lang="en" class="h-full w-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Local plumbing and property maintenance services by Jai Scudder Ltd"
    />
    <GlobalStyle />
    <title>{title}</title>
  </head>
  <body class="h-full min-h-screen w-full bg-white text-black">
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
